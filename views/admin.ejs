
<main class="contenedor panel-administracion">
    <h1><%= pageName %></h1>

    <div class="contenedor-botones">
        <a href="/new-group" class="btn btn-amarillo">New Group</a>
        <a href="/new-meeti" class="btn btn-azul">New Meeti</a>
        <a href="/edit-profile" class="btn btn-rosa">Edit Profile</a>
        <a href="/change-password" class="btn btn-verde">Change Password</a>
        <a href="/profile-image" class="btn btn-amarillo">Profile Image</a>
    </div>

    <div class="seccion-admin">
        <h2>Next Meeti's</h2>
        <% if(meetis.length > 0) { %>
            <ul>
                <% meetis.forEach(meeti => { %>
                    <li>
                        <div class="informacion-admin">
                            <p class="fecha"><%- formatDate(meeti.date, meeti.time) %></p>
                            <a href="/meeti/<%= meeti.slug %>" target="_blank">
                                <h3><%- meeti.title %></h3>
                            </a>
                            <small><%- meeti.interested.length %> Interested </small>
                        </div>

                        <div class="acciones contenedor-botones">
                            <a href="/edit-meeti/<%- meeti.id %>" class="btn btn-verde">Edit</a>
                            <a href="/attendees-meeti/<%- meeti.id %>" class="btn btn-azul2">Attendees</a>
                            <a href="/delete-meeti/<%- meeti.id %>" class="btn btn-rojo">Delete</a>
                        </div>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>You still don't have meetis created</p>
        <% } %>
    </div>

    <div class="seccion-admin">
        <h2>Your Groups</h2>

        <% if(groups.length > 0) { %>
            <ul>
                <% groups.forEach( group => { %>
                    <li>
                        <div class="informacion-admin">
                            <h3><%= group.name %></h3>
                        </div>

                        <div class="acciones contenedor-botones">
                            <a href="/edit-group/<%= group.id %>" class="btn btn-verde">Edit</a>
                            <a href="/group-image/<%= group.id %>" class="btn btn-azul2">Image</a>
                            <a href="/delete-group/<%= group.id %>" class="btn btn-rojo">Delete</a>
                        </div>
                    </li>
                <% }); %>
            </ul>

        <% } else { %>
            <p>You don't have any group created</p>
        <% } %>
    </div>

    <div class="seccion-admin">
        <h2>Previous Meeti's</h2>
        <% if(oldMeetis.length > 0) { %>
            <ul>
                <% oldMeetis.forEach(meeti => { %>
                    <li>
                        <div class="informacion-admin">
                            <p class="fecha"><%- formatDate(meeti.date, meeti.time) %></p>
                            <h3><%- meeti.title %></h3>
                            <small><%- meeti.interested.length %> Interested </small>
                        </div>

                        <div class="acciones contenedor-botones">
                            <a href="/edit-meeti/<%- meeti.id %>" class="btn btn-verde">Edit</a>
                            <a href="/attendees-meeti/<%- meeti.id %>" class="btn btn-azul2">Attendees</a>
                            <a href="/delete-meeti/<%- meeti.id %>" class="btn btn-rojo">Delete</a>
                        </div>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No previous meetis</p>
        <% } %>
    </div>
</main>