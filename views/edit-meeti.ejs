
<main class="contenedor contenedor-formularios">
    <h1><%= pageName %></h1>

    <form class="default-form" method="POST">
        <legend>About the Meeti</legend>

        <div class="campo">
            <label>Group</label>

            <select name="groupId">
                <option value="" disabled selected>-- Select Group --</option>
                <% if(groups.length > 0) { %>
                    <% groups.forEach(group => { %>
                        <option <%- (group.id === meeti.groupId) ? 'selected' : '' %> value="<%= group.id %>"><%- group.name %></option>
                    <% }); %>
                <% } %>
            </select>
        </div>

        <div class="campo">
            <label>Title</label>
            <input type="text" name="title" value="<%- meeti.title %>">
        </div>

        <div class="campo">
            <label>Guest</label>
            <input type="text" name="guest" value="<%- meeti.guest %>">
        </div>

        <div class="columnas-2 grid">
            <div class="campo">
                <label>Date</label>
                <input type="date" name="date" value="<%- meeti.date %>">
            </div>

            <div class="campo">
                <label>Time</label>
                <input type="time" name="time" value="<%- meeti.time %>">
            </div>
        </div>

        <div class="campo">
            <label>Vacancies</label>
            <input type="number" min="1" name="vacancies" value="<%- meeti.vacancies %>">
        </div>

        <div class="campo descripcion">
            <label>Description</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="description" value="<%- meeti.description %>">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>

        <legend>Meeti Location</legend>

        <p class="informacion">Move the pin to the exact point</p>

        <div class="campo map">
            <div id="map"></div>
        </div>

        <small>The assistant will place an estimated address</small>

        <p class="informacion">Confirm that tha following fields are correct:</p>

        <div class="campo">
            <label>Address</label>
            <input type="text" name="address" id="address" value="<%- meeti.address %>">
        </div>

        <div class="campo">
            <label>City</label>
            <input type="text" name="city" id="city" value="<%- meeti.city %>">
        </div>

        <div class="campo">
            <label>State</label>
            <input type="text" name="state" id="state" value="<%- meeti.state %>">
        </div>

        <div class="campo">
            <label>Country</label>
            <input type="text" name="country" id="country" value="<%- meeti.country %>">
        </div>

        <input type="hidden" name="lat" id="lat" value="<%- meeti.location.coordinates[0] %>">
        <input type="hidden" name="lng" id="lng" value="<%- meeti.location.coordinates[1] %>">

        <div class="campo enviar">
            <input type="submit" value="Save Changes" class="btn btn-rosa">
        </div>
    </form>
</main>