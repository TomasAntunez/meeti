
<main class="contenedor contenedor-formularios no-padding">
    <h1><%= pageName %></h1>

    <form class="default-form" action="/new-group" method="POST" enctype="multipart/form-data">
        <div class="campo">
            <label>Name</label>
            <input type="text" name="name" placeholder="Group name">
        </div>

        <div class="campo descripcion">
            <label>Description</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="description">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>

        <div class="campo">
            <label>Category</label>
            <select name="categoryId">
                <option value="" selected disabled>-- Select a Category --</option>
                <% categories.forEach( category => { %>
                    <option value="<%= category.id %>"><%= category.name %></option>
                <% }); %>
            </select>
        </div>

        <div class="campo">
            <label>Image</label>
            <input type="file" name="image">
        </div>

        <div class="campo">
            <label>Website</label>
            <input type="url" name="url" placeholder="Your website">
        </div>

        <div class="campo enviar">
            <input type="submit" value="Create Group" class="btn btn-rosa">
        </div>
    </form>
</main>